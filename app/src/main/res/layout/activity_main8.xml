<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity8">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="Order Detail"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:textColor="@color/coklat"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="Juniartha Imron"
        android:textColor="@color/black"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="25dp"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/store_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="Store: Cihampelas"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="1dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/order_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="Kue Kastengel Sudah dipesan"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="50dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="Pengiriman"
        android:textColor="@color/coklat"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:textColor="@color/abu"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="50dp"
        android:textSize="20sp"
        android:scaleX="2.0"
        android:scaleY="2.0"
        android:shadowColor="@color/abu" />

    <CheckBox
        android:id="@+id/CheckBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:scaleX="2.0"
        android:scaleY="2.0"
        android:shadowColor="@color/abu"
        android:textColor="@color/abu"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="-90dp"
        android:text="Ambil Sendiri"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="40dp"
        android:text="Fast Delivery (minimal 30 menit sampai)"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/red"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="40dp"
        android:text="Done"

        android:textColor="#FFFFFF"
        app:cornerRadius="0dp" />

</LinearLayout>









